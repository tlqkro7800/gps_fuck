<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera_Activity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetBtn"
        android:text="재설정"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/sult_ragular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_stopBtn"
        android:text="시작"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/sult_ragular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/start_btn_background"
        />
    
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/resetBtn"
        app:layout_constraintBottom_toBottomOf="@id/resetBtn"
        app:layout_constraintLeft_toLeftOf="@id/resetBtn"
        app:layout_constraintRight_toRightOf="@id/start_stopBtn"
        android:text="시간 : 00:00:00"
        android:fontFamily="@font/sult_bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextureView
        android:id="@+id/viewFinder"
        android:layout_width="150dp"
        android:layout_height="214dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/video_backgroundf"/>
</androidx.constraintlayout.widget.ConstraintLayout>